            <MenuItem fx:id="DisplaySystemManager" mnemonicParsing="false" onAction="#DisplaySystemManagerData" text="Display System Manager" />
        </items>
      </MenuButton>
      <Label fx:id="ChooseLabel" layoutX="144.0" layoutY="86.0" prefHeight="31.0" prefWidth="357.0" text="Choose Table For Which You Want To Display Data:" />
      <Button fx:id="BackButton" layoutX="223.0" layoutY="292.0" mnemonicParsing="false" onAction="#BackToMenu" prefHeight="39.0" prefWidth="181.0" text="Back To Menu" />
      <ComboBox fx:id="DataComboBox" layoutX="135.0" layoutY="211.0" onAction="#ViewChosenData" prefHeight="39.0" prefWidth="357.0" promptText="View Chosen Data:" />
   </children>
</AnchorPane>
